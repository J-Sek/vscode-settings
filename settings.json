{
    // Projects
    "projects.viewOpenInNewWindow": true,
    "projects.viewAllEnabled": true,
    "projects.configPath": "~/.vscode_projects.json",

    // Workbench / Window
    "window.zoomLevel": 2,
    "window.titleBarStyle": "custom",
    "window.commandCenter": true,
    "window.menuBarVisibility": "compact",
    "window.customTitleBarVisibility": "auto",

    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "bottom",
    "workbench.colorTheme": "Serendipity Midnight Electric",
    "workbench.iconTheme": "helium-icon-theme",
    "workbench.tips.enabled": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "newUntitledFile",

    "breadcrumbs.enabled": false,

    // Editor
    "editor.padding.top": 16,
    "editor.renderLineHighlight": "none",
    "editor.hover.delay": 900,
    "editor.hover.enabled": true,
    "editor.colorDecorators": false,
    // "editor.lineNumbers": "off",
    // "editor.selectionHighlight": false, // ?
    // "editor.occurrencesHighlight": "off",
    "editor.mouseWheelZoom": true,
    "editor.largeFileOptimizations": false,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.overviewRulerBorder": false,
    "editor.guides.indentation": false,
    "editor.stickyScroll.enabled": false,
    "editor.lightbulb.enabled": "off",
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",

    "problems.decorations.enabled": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "markdown.preview.fontSize": 12,
    "diffEditor.ignoreTrimWhitespace": false,

    // Editor Font
    "editor.fontLigatures": true,
    "editor.fontWeight": "400",
    "editor.fontFamily": "'Geist Mono2', '0xProto2', 'Ellograph2', 'Monaspace Radon2', 'Intel One Mono2', 'Aeonik Mono2','Cartograph2', 'Aber Mono2', 'MonoLisa2', 'Martian Mono2', 'Azeret Mono2', 'JetBrains Mono2', 'Dank Mono2', 'Operator Mono', 'Hasklig', 'Fira Code', 'Menlo for Powerline', 'Source Code Pro', Consolas, 'Courier New', monospace",
    "editor.fontSize": 11.99,
    "editor.lineHeight": 1.4,

    // Terminal
    "terminal.integrated.fontFamily": "Ellograph, 'MesloLGS NF', Consolas, monospace",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.autoReplies": {
        "Terminate batch job (Y/N)?": "Y\r"
    },
    "terminal.external.linuxExec": "zsh",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.env.linux": {},
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": [
                "/usr/bin/zsh"
            ],
            "args": ["-l"],
            "icon": "terminal-cmd"
        },
    },

    // Explorer
    "explorer.fileNesting.patterns": {
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb"
    },
    "workbench.tree.indent": 15,

    // Git
    "scm.showHistoryGraph": false,
    "scm.showIncomingChanges": "never",
    "scm.showOutgoingChanges": "never",
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.openRepositoryInParentFolders": "never",

    "gitlens.rebaseEditor.ordering": "asc",
    "gitlens.currentLine.enabled": false,
    "gitlens.keymap": "alternate",
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.graph.showGhostRefsOnRowHover": false,
    "gitlens.graph.minimap.additionalTypes": [
        "localBranches"
    ],
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false
    },

    "git-graph.defaultColumnVisibility": {
        "Date": true,
        "Author": false,
        "Commit": false
    },
    "git-graph.graph.style": "rounded",
    "git-graph.tabIconColourTheme": "grey",

    // Customization
    "vscode_custom_css.imports": [
        "file:///home/{username}/vscode/styles.css",
        "file:///home/{username}/vscode/script.js"
    ],

    // Turbo Console
    "turboConsoleLog.insertEnclosingClass": false,
    "turboConsoleLog.insertEnclosingFunction": false,
    "turboConsoleLog.logMessagePrefix": "»»»",
    "turboConsoleLog.logMessageSuffix": "",
    "turboConsoleLog.includeFileNameAndLineNum": false,
    "turboConsoleLog.addSemicolonInTheEnd": true,

    // C# / .NET
    "dotnet.server.useOmnisharp": true,
    "dotnet.codeLens.enableReferencesCodeLens": false,
    // "csharp.suppressDotnetRestoreNotification": true,
    "[csharp]": {
        "editor.maxTokenizationLineLength": 2500
    },
    "omnisharp.loggingLevel": "warning",
    "omnisharp.sdkIncludePrereleases": false,
    "omnisharp.enableEditorConfigSupport": false,

    // SQL
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "sqltools.disableNodeDetectNotifications": true,
    "sqltools.useNodeRuntime": true,
    "sqltools.connections": [ ... ],

    // JavaScript / Frontend
    "task.problemMatchers.neverPrompt": {
        "npm": true
    },
    "npm.enableRunFromFolder": true,
    "vetur.format.defaultFormatter.ts": "vscode-typescript",
    "console-ninja.featureSet": "Community",
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "Vue.volar"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Docker
    "docker.containers.label": "ContainerName",
    "docker.containers.description": [],
    "docker.containers.sortBy": "Label",
    "docker.images.groupBy": "None",
    "docker.images.label": "Repository",
    "docker.images.sortBy": "Label",
    "docker.images.description": ["Tag"],

    // Misc
    "redhat.telemetry.enabled": false,
    "telemetry.telemetryLevel": "off",
    "extensions.ignoreRecommendations": true,
    "azureFunctions.showCoreToolsWarning": false,
    "search.exclude": {
        "**/Migrations": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
}
